<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="Main card container"
    android:id="@+id/card_layout_base"
    tools:context="satel.adsviewer.Ad_Activity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        tools:context="satel.adsviewer.Ad_Activity">

        <!-- TODO: Figure out the layout so that I can actually see all the text -->
        <LinearLayout
            android:id="@+id/card_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            tools:context="satel.adsviewer.Ad_Activity">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:foregroundGravity="left"
                android:layout_margin="10dp"
                android:tag="image_tag"
                tools:context="satel.adsviewer.Ad_Activity" />

            <LinearLayout
                android:id="@+id/card_text_linearLayout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/card_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/text_margin"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceListItem"
                        tools:context="satel.adsviewer.Ad_Activity" />

                    <TextView
                        android:id="@+id/card_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/text_margin"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceListItem"
                        tools:context="satel.adsviewer.Ad_Activity" />
                </TableRow>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
